<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#fffafafa"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context="com.wat.pum.usosmobile.MainActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/iv_user_photo"
            android:contentDescription="Profil Image"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nicolas Cage"
            android:id="@+id/tv_full_name"
            android:layout_gravity="center_horizontal"
            android:textColor="#fafafa"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/iv_user_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_marginTop="20dp"
            android:layout_column="2">

            <TableRow
                style="@style/DashboardTableRow">
                <com.mikepenz.iconics.view.IconicsTextView
                    style="@style/DashboardIcons"
                    android:text="{faw-certificate}" />
                <LinearLayout
                    style="@style/DashboardLinearLayout">
                    <TextView
                        style="@style/DashboardInfo"
                        android:text="Aktywny student"
                        android:id="@+id/tv_status" />
                    <TextView
                        style="@style/DashboardInfoLabel"
                        android:text="Status"
                        android:id="@+id/tv_status_label"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                style="@style/DashboardTableRow">
                <com.mikepenz.iconics.view.IconicsTextView
                    style="@style/DashboardIcons"
                    android:text="{gmd-local-library}" />
                <LinearLayout
                    style="@style/DashboardLinearLayout">
                    <TextView
                        style="@style/DashboardInfo"
                        android:text="48431"
                        android:id="@+id/tv_album" />
                    <TextView
                        style="@style/DashboardInfoLabel"
                        android:text="Numer albumu" />
                </LinearLayout>
            </TableRow>

            <TableRow
                style="@style/DashboardTableRow">
                <com.mikepenz.iconics.view.IconicsTextView
                    style="@style/DashboardIcons"
                    android:text="{gmd-email}" />
                <LinearLayout
                    style="@style/DashboardLinearLayout">
                    <TextView
                        style="@style/DashboardInfo"
                        android:text="nickolas.cage@gmail.com"
                        android:id="@+id/tv_email" />
                    <TextView
                        style="@style/DashboardInfoLabel"
                        android:text="E-mail"
                        android:id="@+id/tv_email_label"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                style="@style/DashboardTableRow">
                <com.mikepenz.iconics.view.IconicsTextView
                    style="@style/DashboardIcons"
                    android:text="{gmd-call}" />
                <LinearLayout
                    style="@style/DashboardLinearLayout">
                    <TextView
                        style="@style/DashboardInfo"
                        android:text="555-555-555"
                        android:id="@+id/tv_phone" />
                    <TextView
                        style="@style/DashboardInfoLabel"
                        android:text="Numer telefonu"
                        android:id="@+id/tv_phone_label"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                style="@style/DashboardTableRow">
                <com.mikepenz.iconics.view.IconicsTextView
                    style="@style/DashboardIcons"
                    android:text="{gmd-payment}" />
                <LinearLayout
                    style="@style/DashboardLinearLayout">
                    <TextView
                        style="@style/DashboardInfo"
                        android:text="1122334455"
                        android:id="@+id/tv_pesel" />
                    <TextView
                        style="@style/DashboardInfoLabel"
                        android:text="PESEL"/>
                </LinearLayout>
            </TableRow>


        </TableLayout>

    </ScrollView>

</LinearLayout>

